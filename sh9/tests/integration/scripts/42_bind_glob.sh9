# Test 42: Glob expansion on local mounts
echo "=== glob ==="

# Bootstrap host test directory via /tmp bind
bind /tmp /host_tmp
mkdir /host_tmp/sh9_test_42
echo "aaa" > /host_tmp/sh9_test_42/alpha.txt
echo "bbb" > /host_tmp/sh9_test_42/beta.txt
echo "ccc" > /host_tmp/sh9_test_42/gamma.log
unmount /host_tmp

bind /tmp/sh9_test_42 /mnt

# Glob *.txt
echo "=== echo txt ==="
echo /mnt/*.txt

# Glob *.log
echo "=== echo log ==="
echo /mnt/*.log

# Glob all
echo "=== echo all ==="
echo /mnt/*

# Cleanup
rm /mnt/alpha.txt
rm /mnt/beta.txt
rm /mnt/gamma.log
unmount /mnt
bind /tmp /host_tmp
rm /host_tmp/sh9_test_42
unmount /host_tmp
echo "=== glob done ==="
