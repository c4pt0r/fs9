# Test 43: Output/input redirection to local mounts
echo "=== redirect ==="

mkdir /tmp/sh9_test_43
bind /tmp/sh9_test_43 /mnt

# Write with > and >>
echo "line1" > /mnt/out.txt
echo "line2" >> /mnt/out.txt
echo "=== cat out ==="
cat /mnt/out.txt

# Read with <
echo "=== read input ==="
cat < /mnt/out.txt

# wc with input redirect
echo "input data" > /mnt/input.txt
echo "=== wc ==="
wc -l < /mnt/input.txt

# Cleanup
rm /mnt/out.txt
rm /mnt/input.txt
unmount /mnt
rm /tmp/sh9_test_43
echo "=== redirect done ==="
